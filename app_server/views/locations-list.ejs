<% include ./partials/header %>

<div id="banner" class="page-header">
    <div class="row">
        <div class="col-lg-7">
            <h1><%=pageHeader.title %> <small>&nbsp;<%=pageHeader.strapline %></small></h1>
        </div>
        
    </div>
    
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8">
            
        
<% locations.forEach(function(location){ %>
    <div class="row">
        
        <div class="col-xs-12 col-sm-12">
            <div class="row list-group">
                
                <div class="col-xs-12 list-group-item">
                    <h4>
                        <a href="/location"><%=location.name%></a>
                        <small>
                            &nbsp;
                            <% for(var i = 0; i < location.rating; i++){ %>
                                <span class="glyphicon glyphicon-star"></span>
                            <% }; %>
                            <% for(var i = 0; i < 5 - location.rating; i++){ %>
                                <span class="glyphicon glyphicon-star-empty"></span>
                            <% }; %>
                        </small>
                        <span class="badge badge-default pull-right"><%=location.distance %></span>
                    </h4>
                    <p class="address">
                        <%=location.address %>
                    </p>
                    
                    <p>
                        <% for(var i = 0; i < location.facilities.length; i++){ %>
                            <span class="label label-warning"><%=location.facilities[i]%></span>
                            &nbsp;
                        <%  }; %>
                    
                    </p>
                    
                </div>
                
            </div>
            
        </div>
        
    </div>
    
<% }); %>

</div>

<div class="col-xs-12 col-sm-4">
        <p class="lead">
            <%=sidebar%> 

        </p>
        
    </div>  
    
    </div>
</div>

     
        


<% include ./partials/footer %>