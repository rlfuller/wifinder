<% include ./partials/header %>

<div class="row page-header">
    <div class=col-lg-12>
        <h1><%=pageHeader.title %></h1>

    </div>

</div>
<div class="row">
    <div class="col-xs-12 col-md-6">
        <form class="form-horizontal" action="" method="POST" role="form">
            <div class="form-group">
                <label class="col-xs-10 col-sm-2 control-label" for="name">Name

                </label>
                <div class="col-xs-12 col-sm-10">
                    <input id="name" class="form-control" name="name" type="text">

                </div>

            </div>

            <div class="form-group">
                <label class="col-xs-10 col-sm-2 control-label" for="rating">Rating

                </label>
                <div class="col-xs-12 col-sm-2">
                    <select class="form-control input-sm" id="rating" name="rating">
                        <option value="5">5 stars</option>
                        <option value="4">4 stars</option>
                        <option value="3">3 stars</option>
                        <option value="2">2 stars</option>
                        <option value="1">1 star</option>
                    </select>

                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="review">Review

                </label>
                <div class="col-sm-10">
                    <textarea id="review" class="form-control" name="review" rows="5">

                    </textarea>
                </div>

            </div>

            <button class="btn btn-default pull-right">
                Add my review
            </button>

        </form>

    </div>
</div>

<div class="col-xs-12 col-md-4">

</div>

<% include ./partials/footer %>
